<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.teamo_android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_teamo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_teamo"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.NoActionBar"
        tools:targetApi="n">
        <activity
            android:name=".RequestedReplyActivity"
            android:exported="false" />
        
        <activity
            android:name=".MypageActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:supportsRtl="true" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RequestActivity" />
        <activity android:name=".CreatePostContentActivity" />
        <activity android:name=".TeamDetailActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".EmailConfirmationActivity" />
        <activity android:name=".CreateTeamActivity" />
        <activity android:name=".RequestReplyActivity" />
        <activity android:name=".RequestedMessageActivity" />
        <activity android:name=".RequestListActivity" />
    </application>

</manifest>