<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_mild_yellow"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/text_title_login"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="티 모"
        android:textSize="25sp"
        android:textColor="@color/title_dark_green"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_description_1_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="팀"
        android:textSize="15sp"
        android:textColor="@color/title_dark_green"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text_title_login"
        app:layout_constraintStart_toStartOf="@id/text_title_login"/>

    <TextView
        android:id="@+id/text_description_2_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="원을"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:letterSpacing="1"
        app:layout_constraintTop_toTopOf="@id/text_description_1_login"
        app:layout_constraintStart_toEndOf="@id/text_description_1_login" />

    <TextView
        android:id="@+id/text_description_3_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="모"
        android:textSize="15sp"
        android:textColor="@color/theme_grey"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/text_description_1_login"
        app:layout_constraintEnd_toStartOf="@id/text_description_4_login" />

    <TextView
        android:id="@+id/text_description_4_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="으다"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:letterSpacing="1"
        app:layout_constraintTop_toTopOf="@id/text_description_1_login"
        app:layout_constraintEnd_toEndOf="@id/text_title_login" />

    <ImageView
        android:id="@+id/img_teamo_login"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_teamo"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/text_description_1_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edit_id_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/black"
        android:hint="아이디를 입력해주세요"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/img_teamo_login"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:inputType="textPassword"
        android:backgroundTint="@color/black"
        android:hint="비밀번호를 입력해주세요"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/edit_id_login"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_newbee_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="70dp"
        android:text="티모가 처음이신가요?"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_signup_login"/>

    <TextView
        android:id="@+id/btn_signup_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="70dp"
        android:text="@string/text_register"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_newbee_login"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_confirm_login"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/theme_grey"
        android:text="로그인"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:letterSpacing="0.1"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@id/btn_signup_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>