<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_mild_yellow">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_info_request_list"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/text_department_request_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="소프트웨어학부"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_student_num_request_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="20학번"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_department_request_list" />

        <TextView
            android:id="@+id/text_name_request_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="김선호"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_student_num_request_list" />

        <TextView
            android:id="@+id/text_date_request_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="11/16"
            android:textSize="12sp"
            android:textColor="@color/theme_grey"
            app:layout_constraintTop_toBottomOf="@id/text_department_request_list"
            app:layout_constraintStart_toStartOf="@id/text_department_request_list" />

        <TextView
            android:id="@+id/text_time_request_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="20:00"
            android:textSize="12sp"
            android:textColor="@color/theme_grey"
            app:layout_constraintTop_toTopOf="@id/text_date_request_list"
            app:layout_constraintBottom_toBottomOf="@id/text_date_request_list"
            app:layout_constraintStart_toEndOf="@id/text_date_request_list" />

        <TextView
            android:id="@+id/text_approval_request_list"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@color/indicator_green"
            android:text="승인함"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_denial_request_list"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@color/indicator_red"
            android:text="거절함"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_waiting_request_list"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:background="@color/indicator_grey"
            android:text="미확인"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>